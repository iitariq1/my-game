            async get(key) {
                try {
                    const snapshot = await db.ref(key).once('value');
                    if (snapshot.exists()) {
                        return {
                            key: key,
                            value: snapshot.val(),
                            shared: true
                        };
                    }
                    return null;
                } catch (error) {
                    console.error('Error getting data:', error);
                    throw error;
                }
            },
            async set(key, value) {
                try {
                    await db.ref(key).set(value);
                    return {
                        key: key,
                        value: value,
                        shared: true
                    };
                } catch (error) {
                    console.error('Error setting data:', error);
                    throw error;
                }
            },
            async delete(key) {
                try {
                    await db.ref(key).remove();
                    return {
                        key: key,
                        deleted: true,
                        shared: true
                    };
                } catch (error) {
                    console.error('Error deleting data:', error);
                    throw error;
                }
            }
