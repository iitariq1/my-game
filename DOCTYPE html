&nbsp;           const roles = \['murderer', 'accomplice', 'witness', 'forensic', 'investigator', 'investigator'];

&nbsp;           const shuffledRoles = shuffleArray(roles);

&nbsp;           

&nbsp;           // Reassign roles

&nbsp;           gameState.players = gameState.players.map((player, index) => {

&nbsp;               return {

&nbsp;                   ...player,

&nbsp;                   role: shuffledRoles\[index]

&nbsp;               };

&nbsp;           });

