        function generateRoomCode() {
            return Math.floor(1000 + Math.random() * 9000).toString();
        }

        function showScreen(screenName) {
            document.querySelectorAll('.card').forEach(card => card.classList.add('hidden'));
            
            const screens = {
                'home': 'homeScreen',
                'lobby': 'lobbyScreen',
                'waiting': 'waitingScreen',
                'vote': 'voteScreen',
                'result': 'resultScreen'
            };
            
            document.getElementById(screens[screenName]).classList.remove('hidden');
            state.screen = screenName;
            
            if (screenName === 'lobby') {
                updateLobby();
            } else if (screenName === 'waiting') {
                updateWaiting();
            } else if (screenName === 'vote') {
                updateVote();
            } else if (screenName === 'result') {
                updateResult();
            }
        }

        function updateLobby() {
            document.getElementById('displayRoomCode').textContent = state.roomCode;
            document.getElementById('displayCategory').textContent = state.roomData.category;
            document.getElementById('playerCount').textContent = state.roomData.players.length;
            
            const playerList = document.getElementById('playerList');
            playerList.innerHTML = '';
            state.roomData.players.forEach(player => {
                const div = document.createElement('div');
                div.className = 'player-item';
                div.innerHTML = `
